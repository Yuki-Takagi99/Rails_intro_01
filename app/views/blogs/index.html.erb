<h1>ブログ一覧</h1>
<%= notice %>

<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
    <th>投稿ユーザ</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.user.name %></td>
    <td><%= link_to '詳細を見る', blog_path(blog.id) %></td>
    <td><%= link_to '編集する', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？'} %></td>
    <td><%= link_to '削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'} %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'ブログを作成する', new_blog_path %>
<%= link_to 'ブログ一覧画面に戻る', blogs_path %>

