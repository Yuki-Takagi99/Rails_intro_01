<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>本文</th>
  </tr>
  <% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を見る', blog_path(blog.id) %></td>
  </tr>
  <% end %>
</table>

<%= link_to 'ブログを作成する', new_blog_path %>
<%= link_to 'ブログ一覧画面に戻る', blogs_path %>

